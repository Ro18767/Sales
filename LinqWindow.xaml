<Window x:Class="WpfApp12.LinqWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp12"
        mc:Ignorable="d"
        Title="LinqWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical">
            <Button x:Name="Simple" Content="Simple" Margin="10" Click="Simple_Click"/>
            <Button x:Name="ByName" Content="ByName" Margin="10" Click="ByName_Click"/>
            <Button x:Name="ByPrice" Content="ByPrice" Margin="10" Click="ByPrice_Click"/>
            <Button x:Name="Less200" Content="Less200" Margin="10" Click="Less200_Click"/>
            <Button x:Name="ByPrice_Less200" Content="ByPrice_Less200" Margin="10" Click="ByPrice_Less200_Click"/>
            <Button x:Name="WithG" Content="WithG" Margin="10" Click="WithG_Click"/>
            <Button x:Name="WithOV" Content="WithOV" Margin="10" Click="WithOV_Click"/>
        </StackPanel>
        <TextBlock Grid.Column="1" x:Name="textBlock1"/>
    </Grid>
</Window>